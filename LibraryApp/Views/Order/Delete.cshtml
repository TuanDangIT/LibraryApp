@model Biblioteka.Models.OrderViewModel

@{
    ViewData["Title"] = "Edit an Order";
    var errorMessage = TempData["errorMessage"]?.ToString();
}
<h3>@ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">
        <strong>Error!</strong>@errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
    </div>
    
}
<form action="Delete" method="post">
    <div class="mb-3">
        <label class="form-label" >Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Client First Name</label>
        <input type="date" class="form-control" asp-for="FirstName" readonly/>
    </div>
    <div class="mb-3">
        <label class="form-label">Client Last Name</label>
        <input type="date" class="form-control" asp-for="LastName" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Rental Date</label>
        <input type="date" class="form-control" asp-for="RentalDate" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Expire Date</label>
        <input type="date" class="form-control" asp-for="ExpiryDate" readonly />
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Are you sure to delete?</button>
    </div>
</form>